{
    "name": "sixlive/json-schema-assertions",
    "description": "JSON Schema assertions",
    "keywords": [
        "sixlive",
        "json_matchers",
        "json",
        "schema"
    ],
    "homepage": "https://github.com/sixlive/json-schema-assertions",
    "license": "MIT",
    "authors": [
        {
            "name": "TJ Miller",
            "email": "oss@tjmiller.co",
            "homepage": "https://tjmiller.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1|^7.2",
        "swaggest/json-schema": "^0.12.0",
        "phpunit/phpunit": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "sixlive\\JsonSchemaAssertions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "styles:lint": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "styles:fix": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
